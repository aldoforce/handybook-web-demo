div id="failure" class=(["alert", "alert-danger", @message == nil ? "hidden" : nil].compact.join(' ')) = @message
div id="debug" class=(["alert", "alert-warning", @info == nil ? "hidden" : nil].compact.join(' ')) = @info
div id="success" class=(["alert", "alert-success", @success == nil ? "hidden" : nil].compact.join(' ')) = @success
